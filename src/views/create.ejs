<%- include("template/cabecera", {tituloWeb: 'Nuevo Pokemon' }) %>
<div class="container">
  <h1>Crear nuevo Pokemon</h1>
  <form action="/guias" class="my-2" method="POST">
    <input type="text" placeholder="Nombre Guia" class="form-control my-2" name="nombre" />
    <input type="text" placeholder="Impresora" class="form-control my-2" name="impresora" />
    <input type="text" placeholder="Autor" class="form-control my-2" name="autor" />
    <input type="text" placeholder="Texto" class="form-control my-2" name="texto" />
    <input type="text" placeholder="Video" class="form-control my-2" name="video" />
    <input type="text" placeholder="Resumen" class="form-control my-2" name="resumen" />
    <input type="text" placeholder="img" class="form-control my-2" name="img" />
    <button type="submit" class="btn btn-dark btn-block">Agregar</button>
  </form>
</div>
