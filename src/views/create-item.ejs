<%- include("template/header", {tituloWeb: 'Nuevo Pokemon' }) %>
<div class="container">
  <h1>Crear nuevo Item</h1>
  <form action="/shop" class="my-2" method="POST">
    <input type="text" placeholder="Nombre item" class="form-control my-2" name="nombre" />
    <input type="text" placeholder="Cartel" class="form-control my-2" name="precioTexto" />
    <input type="number" placeholder="precio" class="form-control my-2" name="precio" />
    <input type="text" placeholder="img" class="form-control my-2" name="img" />
    <button type="submit" class="btn btn-dark btn-block">Agregar</button>
  </form>
</div>
