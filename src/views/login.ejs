
<%- include("template/header", {tituloWeb: 'Panel de Administración' }) %>

<main class="form-signin">
    <form id="logear" method="POST" action="/login">
      <img class="mb-4" src="../img/logo_rodrigo.png" alt="" width="200" >
      <h1 class="h3 mb-3 fw-normal">Inicia sesión:</h1>
  
      <div class="form-floating">
        <input type="text" required class="form-control" id="floatingInput" name="username" placeholder="Usuario">
        <label for="floatingInput">Usuario:</label>
      </div>
      <div class="form-floating">
        <input type="password" required class="form-control" name="password" id="floatingPassword" placeholder="Contraseña">
        <label for="floatingPassword">Contraseña:</label>
      </div>
  
      <div class="checkbox mb-3">
        <label>
          <a href="sign-up" class="link">¿No tienes cuenta? Regístrate.</a>
        </label>
      </div>
      <button class="btn btn-lg btn-primary botonlogin" type="submit">Iniciar sesión</button>
      <label>
        <a href="/" class="btn btn-lg btn-primary botonlogin text-white ms-3 link">Volver</a>
      </label>
      <p class="mt-5 mb-3 text-muted">&copy; 2021-2022</p>
    </form>
  </main>
<%- include("template/footer") %>
