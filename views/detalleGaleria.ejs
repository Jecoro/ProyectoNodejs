<%- include("template/cabecera", {tituloWeb: 'Detalles de las guias' }) %>

   

    <div class="container">
        <h1>Detalles de la Guia</h1>
        <% if (error) { %>
            <%= mensaje %>
                <a href="/galeria" class="btn btn-dark btn-block my-2">
                    Volver
                </a>
                <% } %>
                    <% if (!error) { %>
                        <form id="editar" data-id="<%= galeria.id %>">
                            <input type="text" value="<%= galeria.nombre %>" class="form-control my-2" name="nombre"
                                id="nombreInput">
                            <input type="text" value="<%= galeria.tipo %>" class="form-control my-2" name="tipo"
                                id="tipoInput">
                            <input type="text" value="<%= galeria.descripcion %>" class="form-control my-2"
                                name="descripcion" id="descripcionInput">
                            <button class="btn btn-warning btn-sm" type="submit">
                                Editar
                            </button>
                        </form>
                        <hr>
                        <button class="btn btn-danger btn-sm" data-id="<%= galeria.id %>">
                            Eliminar
                        </button>

                        <% } %>
    </div>
    <%- include("template/footer") %>

        <script>
            const btnEliminar = document.querySelector('.btn-danger')
            btnEliminar.addEventListener('click', async () => {
                console.log(btnEliminar.dataset.id)
                try {
                    // https://developer.mozilla.org/es/docs/Web/API/HTMLElement/dataset
                    const data = await fetch(`/galeria/${btnEliminar.dataset.id}`, {
                        method: 'delete'
                    })
                    const res = await data.json()
                    console.log(res)
                    if (res.estado) {
                        window.location.href = '/galeria'
                    } else {
                        console.log(res)
                    }
                } catch (error) {
                    console.log(error)
                }
            })
            const formEditar = document.querySelector('#editar');

            formEditar.addEventListener('submit', async (e) => {
                e.preventDefault()
                // Alternativa #1 (capturar input)
                const nombre = formEditar.elements['nombre'].value
                const tipo = formEditar.elements['tipo'].value
                const descripcion = formEditar.elements['descripcion'].value
                // Alternativa #2 (capturar input)
                //const descripcion = document.querySelector('#descripcionInput').value
                const id = formEditar.dataset.id

                const data = await fetch(`/galeria/${id}`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ nombre, tipo, descripcion })
                })

                const res = await data.json()

                if (res.estado) {
                    window.location.href = '/galeria'
                } else {
                    console.log(res)
                }

            })
        </script>