<%- include("template/cabecera", {tituloWeb: 'Nuevo Pokemon' }) %>
    <div class="container">
        <h1>Crear nuevo Pokemon</h1>
        <form action="/galeria" class="my-2" method="POST">
            <input type="text" placeholder="Nombre publicacion" class="form-control my-2" name="nombre">
            <input type="text" placeholder="Impresora" class="form-control my-2" name="impresora">
            <input type="text" placeholder="Autor" class="form-control my-2" name="autor">
            <input type="text" placeholder="Material" class="form-control my-2" name="material">
            <input type="text" placeholder="Tiempo" class="form-control my-2" name="tiempo">
            <input type="text" placeholder="img" class="form-control my-2" name="img">
            <button type="submit" class="btn btn-dark btn-block">
                Agregar
            </button>
        </form>
    </div>
<%- include("template/footer") %>